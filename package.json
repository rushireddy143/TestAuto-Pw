{
  "name": "playwright-automation-framework",
  "version": "1.0.0",
  "description": "Comprehensive Playwright test automation framework with TypeScript",
  "main": "index.js",
  "scripts": {
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:ui": "playwright test --ui",
    "test:report": "playwright show-report",
    "test:chromium": "playwright test --project=chromium",
    "test:firefox": "playwright test --project=firefox",
    "test:webkit": "playwright test --project=webkit",
    "test:mobile": "playwright test --project=mobile-chrome",
    "codegen": "playwright codegen",
    "install:browsers": "playwright install",
    "test:saucelabs": "playwright test --config=playwright.saucelabs.config.ts",
    "test:saucelabs:chrome": "playwright test --config=playwright.saucelabs.config.ts --project=saucelabs-chrome-windows",
    "test:saucelabs:firefox": "playwright test --config=playwright.saucelabs.config.ts --project=saucelabs-firefox-windows",
    "test:saucelabs:safari": "playwright test --config=playwright.saucelabs.config.ts --project=saucelabs-webkit-mac",
    "test:saucelabs:edge": "playwright test --config=playwright.saucelabs.config.ts --project=saucelabs-edge-windows",
    "test:saucelabs:android": "playwright test --config=playwright.saucelabs.config.ts --project=saucelabs-mobile-chrome",
    "test:saucelabs:ios": "playwright test --config=playwright.saucelabs.config.ts --project=saucelabs-mobile-safari"
  },
  "keywords": [
    "playwright",
    "automation",
    "testing",
    "typescript",
    "e2e"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/node": "^20.8.0",
    "typescript": "^5.2.0"
  },
  "dependencies": {}
}